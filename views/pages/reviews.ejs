<%- include('../partials/header') %>
<%- include('../partials/menu') %>

<div class="container">
    <h1 class="text-center">TV Show Reviews</h1>

    <form action="/reviews/filter" method="GET">
        <div class="row">
            <div class="form-group col-sm-10">
                <input type="text" class="form-control" name="filter" id="filter" placeholder="Enter TV show title">
            </div>
            <div class="col-sm">
                <input type="submit" value="Filter" id="filter_button" class="btn btn-primary btn-block" disabled>
            </div>
        </div> 
    </form>

    <% if (message) { %>
        <div class="container text-center">
            <h3><%- message %></h3>
        </div>
    <% } %>

    <table class="table table-bordered">
        <tr>
            <th>TV Show</th>
            <th>Review</th>
            <th>Review Date</th>
        </tr>

        <% if (items) {
            var rows = '';
            for (var i = 0; i < items.length; i++) {
                rows += '<tr><td>' + items[i].tv_show + '</td><td>' + items[i].review + '</td><td>' + items[i].review_date + '</td></tr>';
            } %>
            <%- rows %>
        <% } %>

    </table>

</div>

<%- include('../partials/footer') %>